<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <field name="password" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Password</label>
                <elementTmpl>Tychons_StoreManager/form/element/password</elementTmpl>
                <dataType>text</dataType>
                <visible>true</visible>
                <validation>
                   <!--  <rule name="validate-password" xsi:type="boolean">true</rule> -->
                </validation>
            </settings>
        </field>
        <field name="conf_password" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
               <label translate="true">Confirm Password</label>
               <elementTmpl>Tychons_StoreManager/form/element/conf_password</elementTmpl>
               <dataType>text</dataType>
               <visible>true</visible>
                <validation>
                   <!-- <rule name="validate-password" xsi:type="boolean">true</rule> -->
                   <!--  <rule name="equalTo" xsi:type="string">password</rule> -->
                </validation>
            </settings>
        </field>
        <field name="middlename" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="suffix" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="prefix" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="dob" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="taxvat" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="gender" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="sendemail_store_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                </item>
            </argument>
            <settings>
                <dataType>number</dataType>
                <label translate="true">Send Welcome Email From</label>
                <imports>
                    <link name="value">${ $.provider }:data.customer.store_id</link>
                </imports>
                <visible>false</visible>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Store\Model\System\Store"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="extension_attributes.company_attributes.company_id" component="Magento_Company/js/form/element/customer/auto-complete" sortOrder="15" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer</item>
                    <item name="url" xsi:type="url" path="company/customer/companyList"/>
                    <item name="noticeModal" xsi:type="string" translate="true"><![CDATA[This customer is a user of a different company. If you proceed, the customer will be unlinked from the current company and linked to the selected company.]]></item>
                    <item name="noticeTitle" xsi:type="string" translate="true"><![CDATA[Change Company?]]></item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Associate to Company</label>
                <visible>false</visible>
            </settings>
        </field>
    </fieldset>
</form>
