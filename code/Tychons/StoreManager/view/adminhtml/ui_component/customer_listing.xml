<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New User</label>
            </button>
        </buttons>
        <spinner>customer_columns</spinner>
    </settings>
        <listingToolbar name="listing_top"/>
    <columns name="customer_columns" class="Magento\Customer\Ui\Component\Listing\Columns">
        <column name="role_id" class="Tychons\StoreManager\Ui\Component\Listing\Column\UserRole">
            <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="editor" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">User Role</item>
                    <item name="sortOrder" xsi:type="number">120</item>
                    </item>
            </argument>
        </column>
        <column name="company_name" class="Tychons\StoreManager\Ui\Component\Listing\Column\UserCompany">
            <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="editor" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Store</item>
                    <item name="sortOrder" xsi:type="number">120</item>
                    </item>
            </argument>
        </column>
    </columns>
</listing>
