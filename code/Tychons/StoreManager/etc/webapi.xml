<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="POST" url="/V1/tychons-storemanager/company">
		<service class="Tychons\StoreManager\Api\CompanyRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Tychons_StoreManager::Company_save"/>
		</resources>
	</route>
	<route method="GET" url="/V1/tychons-storemanager/company/search">
		<service class="Tychons\StoreManager\Api\CompanyRepositoryInterface" method="getList"/>
		<resources>
			<resource ref="Tychons_StoreManager::Company_view"/>
		</resources>
	</route>
	<route method="GET" url="/V1/tychons-storemanager/company/:companyId">
		<service class="Tychons\StoreManager\Api\CompanyRepositoryInterface" method="getById"/>
		<resources>
			<resource ref="Tychons_StoreManager::Company_view"/>
		</resources>
	</route>
	<route method="PUT" url="/V1/tychons-storemanager/company/:companyId">
		<service class="Tychons\StoreManager\Api\CompanyRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Tychons_StoreManager::Company_update"/>
		</resources>
	</route>
	<route method="DELETE" url="/V1/tychons-storemanager/company/:companyId">
		<service class="Tychons\StoreManager\Api\CompanyRepositoryInterface" method="deleteById"/>
		<resources>
			<resource ref="Tychons_StoreManager::Company_delete"/>
		</resources>
	</route>
</routes>
