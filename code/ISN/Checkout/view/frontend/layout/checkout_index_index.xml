<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
		<css src="ISN_Checkout::css/isn-checkout.css"/>
	</head>   
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <!-- Your customization will be here -->
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="component" xsi:type="string">uiComponent</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Magento_Checkout/onepage</item>
                            </item>
                            <item name="children" xsi:type="array">
                               	<item name="progressBar" xsi:type="array">
 									<item name="config" xsi:type="array">
										<item name="template" xsi:type="string">ISN_Checkout/checkout/progress-bar</item>
									</item>   
                                 </item>

                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">

                                        <item name="billing-step" xsi:type="array">
                                            <item name="component" xsi:type="string">uiComponent</item>
                                            <item name="children" xsi:type="array">
                                                <item name="purchaseOrder" xsi:type="array">
                                                    <item name="component"  xsi:type="string">ISN_Checkout/js/view/checkout/purchase-order</item>
                                                    <item name="sortOrder" xsi:type="string">20</item>
                                                </item>

                                                <item name="orderComments" xsi:type="array">
                                                    <item name="component"  xsi:type="string">ISN_Checkout/js/view/checkout/order-comments</item>
                                                    <item name="provider" xsi:type="string">checkoutProvider</item>
                                                    <item name="sortOrder" xsi:type="string">15</item>
                                                    <item name="config" xsi:type="array">
                                                        <item name="inputName" xsi:type="string">comments</item>
                                                        <item name="uid" xsi:type="string">comments</item>
                                                        <item name="placeholder" xsi:type="string">Enter Order Comments</item>
                                                        <item name="cols" xsi:type="string">120</item>
                                                        <item name="rows" xsi:type="string">5</item>
                                                    </item>
                                                </item>

                                            </item>
                                        </item>

                                    </item>
                                </item>
                                
                             	<item name="sidebar" xsi:type="array">
	                                <item name="config" xsi:type="array">
	                                    <item name="template" xsi:type="string">ISN_Checkout/checkout/sidebar</item>
	                                </item>   
  								</item>
                             </item>
                        </item>
                    </item>

                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

